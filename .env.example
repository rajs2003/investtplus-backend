# ============================================
# ENVIRONMENT
# ============================================
APP_VERSION=1.5.2
NODE_ENV=development

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Connection String
MONGODB_URL=mongodb://127.0.0.1:27017/investtplus-backend

# ============================================
# REDIS CONFIGURATION
# ============================================
# Option 1: Use REDIS_URL (recommended for production/Render/Railway)
# REDIS_URL=redis://localhost:6379
# REDIS_URL=redis://default:password@your-redis-host.com:6379

# Option 2: Use separate host/port (for local development)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=thisisasamplesecret
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# For testing, you can use a fake SMTP service like Ethereal: https://ethereal.email/create
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=support@investtplus.com

# ============================================
# TWILIO CONFIGURATION (Optional)
# ============================================
# Uncomment and set these if you want to use Twilio for SMS/Phone verification
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
# TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

